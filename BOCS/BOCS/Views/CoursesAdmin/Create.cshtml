@model BOCS.Models.Course
@{
    ViewData["Title"] = "Create Course";
}
<section class="container py-3">
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <h4 class="mb-3">Create Course</h4>
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label asp-for="Title" class="form-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="IsActive" />
                    <label class="form-check-label" asp-for="IsActive"></label>
                </div>
                <div class="mb-3">
                    <label asp-for="DurationDays" class="form-label"></label>
                    <input asp-for="DurationDays" class="form-control" type="number" min="1" max="3650" />
                    <span asp-validation-for="DurationDays" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="PriceBdt" class="form-label"></label>
                    <input asp-for="PriceBdt" class="form-control" type="number" min="0" step="1" />
                    <span asp-validation-for="PriceBdt" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label">Thumbnail (JPG/PNG/WEBP, max 2MB)</label>
                    <input type="file" name="thumbnail" accept="image/*" class="form-control" />
                </div>

                <div class="d-flex gap-2">
                    <button class="btn btn-primary" type="submit">Save</button>
                    <a class="btn btn-outline-secondary" asp-action="Index">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</section>
