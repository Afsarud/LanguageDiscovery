@model IEnumerable<BOCS.Models.Course>
@{
    ViewData["Title"] = "Manage Courses";
    var q = (string?)ViewBag.Query ?? "";
}
<section class="container py-3">
    <div class="d-flex flex-column flex-md-row align-items-md-center gap-2 mb-3">
        <h3 class="mb-0">Courses</h3>
        <form method="get" class="ms-md-auto d-flex gap-2 w-100 w-md-auto">
            <input name="q" value="@q" class="form-control" placeholder="Search by title..." />
            <button class="btn btn-outline-secondary" type="submit">Search</button>
            <a class="btn btn-primary" asp-action="Create">+ New Course</a>
        </form>
    </div>

    @if (TempData["StatusMessage"] is string msg)
    {
        <div class="alert alert-success py-2">@msg</div>
    }

    @if (!Model.Any())
    {
        <div class="text-muted">No courses yet.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                       @*  <th style="width:120px;">Thumbnail</th> *@
                        <th>Course Title</th>
                        <th>Course Image</th>
                        <th>Course Duration</th>
                        <th>Course Price</th>
                        <th style="width:120px;">Active</th>
                        <th style="width:220px;">Buttons</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model)
                    {
                        var thumb = string.IsNullOrWhiteSpace(c.ThumbnailUrl)
                        ? "/placeholder-course.png"
                        : c.ThumbnailUrl;
                        var fileName = System.IO.Path.GetFileName(thumb);
                        <tr>
                            @* <td>
                                <a href="@thumb" target="_blank" rel="noopener">
                                    <img src="@thumb"
                                         alt="thumb"
                                         style="width:80px;height:60px;object-fit:cover;border-radius:.35rem;border:1px solid #eee" />
                                </a>
                            </td> *@

                            <td class="fw-semibold">@c.Title</td>
                            @* <td class="small text-break" style="max-width:320px;">
                                @c.ThumbnailUrl
                            </td> *@
                            <td>@fileName</td>
                            <td class="fw-semibold">@c.DurationDays</td>
                            <td class="fw-semibold">@c.PriceBdt</td>
                            <td>
                                @if (c.IsActive)
                                {
                                    <span class="badge bg-success">Yes</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">No</span>
                                }
                            </td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@c.Id">Edit</a>
                                <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@c.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</section>
