@model BOCS.ModelsView.SubjectManageVM
@{
    ViewData["Title"] = $"{Model.CourseTitle} — Subjects";
}
<section class="container py-4">
    <div class="d-flex gap-2 mb-3">
        <a class="btn btn-success btn-sm"
           asp-action="Create" asp-route-courseId="@Model.CourseId">+ Add Subject</a>
        <a class="btn btn-outline-secondary btn-sm"
           asp-action="Courses">← Back to courses</a>
    </div>

    <h4>@Model.CourseTitle — Subjects</h4>

    <table class="table table-hover mt-3">
        <thead>
            <tr>
                <th style="width:80px;">Order</th>
                <th>Title</th>
                <th style="width:120px;" class="text-center">Lessons</th>
                <th style="width:110px;" class="text-center">Published</th>
                <th style="width:120px;" class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model.Subjects)
            {
                <tr>
                    <td>@s.SortOrder</td>
                    <td>@s.Title</td>
                    <td class="text-center">@s.LessonCount</td>
                    <td class="text-center">@((s.IsPublished) ? "Yes" : "No")</td>
                    <td class="text-end">
                        <a class="btn btn-outline-danger btn-sm"
                           asp-action="Delete" asp-route-courseId="@Model.CourseId" asp-route-id="@s.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>