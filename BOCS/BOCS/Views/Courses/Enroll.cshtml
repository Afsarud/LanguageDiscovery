@using BOCS.Models;
@model BOCS.ModelsView.EnrollmentCreateVM
@{
    ViewData["Title"] = "Enroll";
    var payTo = "01308599956"; // আমাদের bKash নম্বর
}

<section class="container py-4">
    <h4 class="mb-3">Enroll: @Model.CourseTitle</h4>

    <div class="row g-4">
        <div class="col-lg-8">

            <form asp-action="Enroll" method="post" novalidate>
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="CourseId" />
                <input type="hidden" asp-for="CourseTitle" />
                <input type="hidden" asp-for="CoursePriceBdt" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Access" class="form-label"></label>
                        <select asp-for="Access" class="form-select"
                                asp-items="Html.GetEnumSelectList<CourseAccessType>()"></select>
                        <span asp-validation-for="Access" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="PaymentMethod" class="form-label"></label>
                        <select asp-for="PaymentMethod" class="form-select"
                                asp-items="Html.GetEnumSelectList<PaymentMethodType>()"></select>
                        <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                    </div>

                    <div class="col-md-12">
                        <label asp-for="TransactionId" class="form-label"></label>
                        <input asp-for="TransactionId" class="form-control"
                               placeholder="Payment transaction id" />
                        <span asp-validation-for="TransactionId" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="SenderNumber" class="form-label"></label>
                        <input asp-for="SenderNumber" class="form-control" placeholder="Sender number" />
                        <span asp-validation-for="SenderNumber" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="MobileNumber" class="form-label"></label>
                        <input asp-for="MobileNumber" class="form-control" placeholder="Your mobile number" />
                        <span asp-validation-for="MobileNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-4 p-3 border rounded bg-light d-flex justify-content-between align-items-center">
                    <div class="fw-semibold">Total price</div>
                    <div class="fs-5">৳ @Model.CoursePriceBdt.ToString("N0")</div>
                </div>

                <div class="mt-4 d-flex gap-2">
                    <button class="btn btn-primary">Submit enrollment</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
                </div>
            </form>

        </div>

        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">Payment to</div>
                <div class="card-body">
                    <p class="mb-2">bKash (Personal):</p>
                    <div class="input-group">
                        <input id="payNumber" class="form-control" value="@payTo" readonly />
                        <button class="btn btn-outline-secondary" type="button" id="copyBtn">Copy</button>
                    </div>
                    <small class="text-muted">টাকা পাঠানোর পর উপরের Transaction id দিন।</small>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById('copyBtn')?.addEventListener('click', function () {
            const input = document.getElementById('payNumber');
            input.select(); input.setSelectionRange(0, 99999);
            navigator.clipboard.writeText(input.value).then(() => {
                this.innerText = 'Copied';
                setTimeout(() => this.innerText = 'Copy', 1500);
            });
        });
    </script>
}