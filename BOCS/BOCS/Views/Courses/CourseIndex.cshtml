@model IEnumerable<BOCS.ModelsView.CourseListItemVM>
@{
    ViewData["Title"] = "All Courses";
    var q = (string?)ViewData["q"] ?? "";
    var sort = (string?)ViewData["sort"] ?? "recent";
}
<section class="container py-3">
    <div class="d-flex flex-column flex-md-row align-items-md-center gap-3 mb-3">
        <h2 class="mb-0">Courses</h2>

        <form asp-action="Index" asp-controller="Courses" method="get" class="ms-md-auto d-flex gap-2 w-100 w-md-auto">
            <input name="q" value="@q" class="form-control" placeholder="Search courses..." />
            <select name="sort" class="form-select" style="max-width:160px">
                <option value="recent" selected="@("recent"==sort)">Recent</option>
                <option value="title" selected="@("title"==sort)">Title</option>
                <option value="popular" selected="@("popular"==sort)">Popular</option>
            </select>
            <button class="btn btn-primary" type="submit">Search</button>
        </form>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center text-muted py-5">
            <div class="display-6 mb-2">¯\_(ツ)_/¯</div>
            <p class="mb-0">No courses found.</p>
        </div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var c in Model)
            {
                <div class="col-12 col-sm-6 col-lg-4">
                    @await Html.PartialAsync("_CourseCard", c)
                </div>
            }
        </div>
    }
</section>

@section Scripts {
    <script>
        // Future: ajax filters, etc.
    </script>
}